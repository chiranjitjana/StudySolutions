    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_view_background"
        tools:context="com.sksomaiyacollege.utkarsh.Activity.VideoPlayerActivity">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            android:layout_margin="4sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textColor="#333030"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:text="bfssssssssfsssssssss"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_time"
                    android:textColor="#333030"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:text="bfssssssssfsssssssss"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dassdsd"
                    android:id="@+id/description"
                    android:textColor="#605a5a"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:layout_margin="@dimen/activity_horizontal_margin"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>





