<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="wss.com.mystudysolutions.fragments.BlogFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_artical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:elevation="5dp"
        android:layout_margin="@dimen/custom_card_margin"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/card_view_background"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_blog"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blog"
            />

        <TextView
            android:id="@+id/title_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_blog"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="4dp"
            android:text="Android Material Design.."
            android:textSize="@dimen/content_header"
            android:textStyle="bold"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blog_created_date"
                android:text="27th March 2017"
                android:layout_below="@+id/title_blog"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blog_author"
                android:text="Author\n\@Chiranjit Jana"
                android:layout_below="@+id/title_blog"
                android:padding="4dp"
                android:layout_alignParentLeft="true"
                />

            <View
                android:id="@+id/hr"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hr_height"
                android:layout_below="@id/blog_author"
                android:layout_marginTop="@dimen/hr_margin_top_bottom"
                android:background="@color/simple_hr"></View>

            <TextView
                android:id="@+id/blog_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/hr"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like)."
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
