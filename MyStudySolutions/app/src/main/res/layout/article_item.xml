<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_artical"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/card_view_background"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            >

            <TextView
                android:id="@+id/article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="25dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="Android Material Design.."
                android:textSize="@dimen/content_description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:elevation="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="New"
                android:textColor="@color/card_view_background"
                android:textSize="@dimen/content_description"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/article_title"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="centerCrop"
                />


            <!--  <TextView
                  android:id="@+id/article_url"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/course_content_header"
                  android:layout_marginTop="@dimen/activity_vertical_margin"
                  android:textSize="@dimen/content_description"
                  android:textStyle="normal"
                  android:textColor="@color/card_view_background"
                  />
-->
            <!--  <TextView
                  android:id="@+id/article_contain"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/cover"
                  android:layout_marginTop="@dimen/activity_vertical_margin"
                  android:textSize="@dimen/content_description"
                  android:textStyle="normal"
                  android:textColor="@color/card_view_background"
                  />-->

            <!-- <TextView
                android:id="@+id/article_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_author"
                android:layout_marginTop="@dimen/activity_vertical_margin"

                android:textSize="@dimen/content_description"
                android:textStyle="normal"
                android:textColor="@color/card_view_background"
                />-->

            <TextView
                android:id="@+id/article_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="3dp"
                android:text="Chiranjit Jana"
                android:textSize="@dimen/content_author"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="27th March 2017"
                android:textSize="@dimen/content_date"
                android:textStyle="normal" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
