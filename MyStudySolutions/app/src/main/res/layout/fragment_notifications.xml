<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F6F7"
    >


    <RelativeLayout
        android:id="@+id/descriptive_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/custom_card_margin"
            android:layout_marginLeft="@dimen/custom_card_margin"
            android:layout_marginRight="@dimen/custom_card_margin"
            android:layout_marginTop="@dimen/custom_card_margin"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/card_view_background"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_letter" />

                <TextView
                    android:id="@+id/title_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="4dp"

                    android:text="Workshop in Android"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noti_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"
                    android:elevation="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="New"
                    android:textColor="@color/card_view_background"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_noti"
                    android:layout_toRightOf="@+id/imageView2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout"
                    android:textSize="@dimen/content_description" />

                <TextView
                    android:id="@+id/noti_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="@dimen/custom_card_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="27th March 2017"
                    android:textSize="@dimen/content_date"></TextView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/doc_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/descriptive_noti"
        >

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/card_view_background"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="@dimen/custom_card_margin"
            android:layout_marginRight="@dimen/custom_card_margin"
            android:layout_marginBottom="@dimen/custom_card_margin"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/doc_iv"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:padding="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_document"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/title_noti_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/doc_iv"
                    android:layout_toRightOf="@+id/doc_iv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="Workshop in Android"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noti_status_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"
                    android:elevation="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="New"
                    android:textColor="@color/card_view_background"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_noti_doc"
                    android:layout_toRightOf="@+id/doc_iv"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout"
                    android:textSize="@dimen/content_description" />

                <TextView
                    android:id="@+id/noti_date_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/description_doc"
                    android:layout_marginTop="@dimen/custom_card_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="27th March 2017"
                    android:textSize="@dimen/content_date"></TextView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/doc_noti_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/descriptive_noti">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/custom_card_margin"
            android:layout_marginLeft="@dimen/custom_card_margin"
            android:layout_marginRight="@dimen/custom_card_margin"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/card_view_background"
            card_view:cardCornerRadius="4dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/doc_iv_img"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_picture"

                    />

                <TextView
                    android:id="@+id/title_noti_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/doc_iv_img"
                    android:layout_toRightOf="@+id/doc_iv_img"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="Workshop in Android"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noti_status_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"
                    android:elevation="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="New"
                    android:textColor="@color/card_view_background"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_noti_img"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_toRightOf="@+id/doc_iv_img"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout"
                    android:textSize="@dimen/content_description" />

                <TextView
                    android:id="@+id/noti_date_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/description_img"
                    android:layout_marginTop="@dimen/custom_card_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="27th March 2017"
                    android:textSize="@dimen/content_date"></TextView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/doc_noti_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/descriptive_noti"
     >

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:elevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/card_view_background"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="@dimen/custom_card_margin"
            android:layout_marginRight="@dimen/custom_card_margin"
            android:layout_marginBottom="@dimen/custom_card_margin"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/doc_iv_video"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_video_player"

                    />

                <TextView
                    android:id="@+id/title_noti_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/doc_iv_video"
                    android:layout_toRightOf="@+id/doc_iv_video"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="Workshop in Android"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noti_status_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"
                    android:elevation="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="New"
                    android:textColor="@color/card_view_background"
                    android:textSize="@dimen/content_description"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_noti_video"
                    android:layout_toRightOf="@+id/doc_iv_video"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout"
                    android:textSize="@dimen/content_description" />

                <TextView
                    android:id="@+id/noti_date_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/description_video"
                    android:layout_marginTop="@dimen/custom_card_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="27th March 2017"
                    android:textSize="@dimen/content_date"></TextView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>