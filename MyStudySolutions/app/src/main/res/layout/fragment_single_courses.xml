<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="wss.com.mystudysolutions.fragments.CoursesFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/custom_card_margin"
        card_view:cardBackgroundColor="@color/card_view_background"
        card_view:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/course_content_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_content_header"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/content_description"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/eligiblity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/duration"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/content_description"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/content_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eligiblity"
                android:layout_marginTop="@dimen/activity_vertical_margin"

                android:textSize="@dimen/content_description"
                android:textStyle="normal" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
