<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="wss.com.mystudysolutions.fragments.ListPreviousFeedbackFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/custom_card_margin"
        android:clickable="true"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/card_view_background"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <RelativeLayout
                android:id="@+id/responses_from_wss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/response_bg">

                <TextView
                    android:id="@+id/date_sended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/response"
                    android:padding="5dp"
                    android:text="27 June 2017"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_sended"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:padding="5dp"
                    android:text="@string/reponse_from_wss" />


            </RelativeLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/responses_from_wss"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:background="@color/divider_color">

            </View>

            <RelativeLayout
                android:id="@+id/request_from_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:background="@color/request_bg"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/date_sended_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/request"
                    android:padding="5dp"
                    android:text="27 June 2017"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/sender_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_sended_feedback"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:padding="5dp"
                    android:text="@string/reponse_from_user" />


            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
