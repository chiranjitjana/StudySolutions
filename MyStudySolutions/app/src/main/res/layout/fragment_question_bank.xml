<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="wss.com.mystudysolutions.fragments.QuestionBankFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/qb_card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/custom_card_margin"
        android:layout_marginRight="@dimen/custom_card_margin"
        android:layout_marginTop="@dimen/custom_card_margin"
        android:clickable="true"
        android:elevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/card_view_background"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/custom_card_margin">

            <TextView
                android:id="@+id/qb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="25dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="Android Material Design.."
                android:textSize="@dimen/content_description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qb_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:elevation="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="New"

                android:textColor="@color/card_view_background"
                android:textSize="@dimen/content_description"
                android:textStyle="bold" />


            <!--<ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/article_title"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"

                android:scaleType="fitXY"
                android:src="@drawable/blog" />-->

            <TextView
                android:id="@+id/qb_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qb_title"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/qb_date"
                android:layout_toStartOf="@+id/qb_date"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="4dp"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters"
                android:textSize="@dimen/content_description"
                android:textStyle="normal" />


            <ImageView
                android:id="@+id/content_type"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/qb_description"
                android:layout_toRightOf="@+id/qb_description"
                android:src="@drawable/ic_document" />

            <TextView
                android:id="@+id/qb_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="Chiranjit Jana"
                android:textSize="@dimen/content_author"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qb_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="27th March 2017"
                android:textSize="@dimen/content_date"
                android:textStyle="normal" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
